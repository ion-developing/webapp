<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:l="sap.ui.layout"
	xmlns:f="sap.ui.layout.form"
	xmlns:core="sap.ui.core">
	<VBox class="sapUiSmallMargin">
		<f:Form
			editable="true">
			<f:layout>
				<f:ResponsiveGridLayout
					labelSpanXL="3"
					labelSpanL="3"
					labelSpanM="3"
					labelSpanS="12"
					adjustLabelSpan="false"
					emptySpanXL="4"
					emptySpanL="4"
					emptySpanM="4"
					emptySpanS="0"
					columnsXL="1"
					columnsL="1"
					columnsM="1"
					singleContainerFullSize="false" />
			</f:layout>
			<f:formContainers>
				<f:FormContainer>
					<f:formElements>
						<f:FormElement label="{i18n>EditCecos.Form.Label.2}">
							<f:fields>
								<Input id="idILinea" value="{mEditCecos>/Linea}" enabled="false "/>
							</f:fields>
						</f:FormElement>
						<f:FormElement label="{i18n>EditCecos.Form.Label.5}">
							<f:fields>
								<Input id="idICentroCoste" value="{mEditCecos>/CentroCosto}" enabled="false "/>
								<Button icon="sap-icon://search"
									press="onPressBuscarCeco">
									<layoutData>
										<l:GridData span="XL1 L1 M1 S2" />
									</layoutData>
								</Button>
							</f:fields>
						</f:FormElement>
						<f:FormElement label="{i18n>EditCecos.Form.Label.6}">
							<f:fields>
								<Input id="idIDescripcion" value="{mEditCecos>/Descripcion}" enabled="false "/>
							</f:fields>
						</f:FormElement>
						<f:FormElement label="{i18n>EditCecos.Form.Label.7}">
							<f:fields>
								<Input id="idIDistr" value="{mEditCecos>/Distr}" enabled="false "/>
							</f:fields>
						</f:FormElement>
						<f:FormElement label="{i18n>EditCecos.Form.Label.8}">
							<f:fields>
								<Input id="idIImporte" value="{mEditCecos>/Importe}" enabled="false "/>
							</f:fields>
						</f:FormElement>
						
					</f:formElements>
				</f:FormContainer>
			</f:formContainers>
		</f:Form>
	</VBox>
</core:FragmentDefinition>