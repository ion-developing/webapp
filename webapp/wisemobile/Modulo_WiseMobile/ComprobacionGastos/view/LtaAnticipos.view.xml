<mvc:View
	controllerName="com.axiomasoluciones.wisemobile.Modulo_WiseMobile.ComprobacionGastos.controller.LtaAnticipos"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:f="sap.ui.layout.form"
	xmlns:core="sap.ui.core"
	xmlns:l="sap.ui.layout"
	xmlns="sap.m">
	<Page id="idPage" showHeader="false" floatingFooter="true">
		<subHeader>
			<Toolbar design="Solid" class="toolbarColorCydsa">
				<Label text="{i18n>LtaAnticipos.title}" design="Bold" class="toolbarTextColor"/>
			</Toolbar>
		</subHeader>
		<content>
			<!-- mLtaAnticipos -->
			<Table
				id="idTableLtaAnticipos"
				mode="MultiSelect"
				inset="false"
				items="{
						path: 'mTables>/XXX'
				}"
				growing="true"
				growingThreshold="100"
				growingScrollToLoad="false"
				itemPress="onItemPressLtaAnticipos">
				<headerToolbar>
					<Toolbar id="idToolbarLtaAnticipos">
						<Title text="{i18n>Records-found}" titleStyle="H6"/>
						<Title id="idCountTableLtaAnticipos" text="(0)" titleStyle="H6"/>
						<ToolbarSpacer/>
						<Button icon="sap-icon://add"
							text="{i18n>ComprobacionGastos.Form.LtaAnticipos.Button}"
							press="onPressCrearAnticipo" />
						<Button
							icon="sap-icon://action-settings"
							press="onSettingsTable" />
						<Button icon="sap-icon://table-column" press="onPersoPress" />
					</Toolbar>
				</headerToolbar>
				<columns>
					<Column id="idCol0"  width="1.5rem"
						visible="{mManageControls>LtaAnticipos.Monitor.Table.Column.0}">
						<Text text="Pos"/>
					</Column>
					<Column id="idCol1"
						visible="{mManageControls>LtaAnticipos.Monitor.Table.Column.1}">
						<Text text="{i18n>LtaAnticipos.Monitor.Table.Column.1}"/>
					</Column>
					<Column id="idCol2"
						visible="{mManageControls>LtaAnticipos.Monitor.Table.Column.2}">
						<Text text="{i18n>LtaAnticipos.Monitor.Table.Column.2}"/>
					</Column>
					<Column id="idCol3"
						visible="{mManageControls>LtaAnticipos.Monitor.Table.Column.3}">
						<Text text="{i18n>LtaAnticipos.Monitor.Table.Column.3}"/>
					</Column>
					
					<Column id="idCol4" 
						minScreenWidth="Tablet"
						demandPopin="true"
						visible="{mManageControls>LtaAnticipos.Monitor.Table.Column.4}">
						<Text text="{i18n>LtaAnticipos.Monitor.Table.Column.4}"/>
					</Column>
					
					<Column id="idCol5" 
						minScreenWidth="Tablet"
						demandPopin="true"
						visible="{mManageControls>LtaAnticipos.Monitor.Table.Column.5}">
						<Text text="{i18n>LtaAnticipos.Monitor.Table.Column.5}"/>
					</Column>
					
					<Column id="idCol6" 
						minScreenWidth="Tablet"
						demandPopin="true"
						visible="{mManageControls>LtaAnticipos.Monitor.Table.Column.6}">
						<Text text="{i18n>LtaAnticipos.Monitor.Table.Column.6}"/>
					</Column>
					
					<Column id="idCol7" 
						minScreenWidth="Tablet"
						demandPopin="true"
						visible="{mManageControls>LtaAnticipos.Monitor.Table.Column.7}">
						<Text text="{i18n>LtaAnticipos.Monitor.Table.Column.7}"/>
					</Column>
					
					<Column id="idCol8" 
						minScreenWidth="Tablet"
						demandPopin="true"
						visible="{mManageControls>LtaAnticipos.Monitor.Table.Column.8}">
						<Text text="{i18n>LtaAnticipos.Monitor.Table.Column.8}"/>
					</Column>
														
					<Column id="idCol9" 
						minScreenWidth="Tablet"
						demandPopin="true"
						visible="{mManageControls>LtaAnticipos.Monitor.Table.Column.9}">
						<Text text="{i18n>LtaAnticipos.Monitor.Table.Column.9}"/>
					</Column>
					
					<Column id="idCol10" 
						minScreenWidth="Tablet"
						demandPopin="true"
						visible="{mManageControls>LtaAnticipos.Monitor.Table.Column.10}">
						<Text text="{i18n>LtaAnticipos.Monitor.Table.Column.10}"/>
					</Column>
					
					<Column id="idCol11" 
						minScreenWidth="Tablet"
						demandPopin="true"
						visible="{mManageControls>LtaAnticipos.Monitor.Table.Column.11}">
						<Text text="{i18n>LtaAnticipos.Monitor.Table.Column.11}"/>
					</Column>
					
				</columns>
			
				<items>
					<ColumnListItem
						vAlign="Middle">
						<cells>
							<Text text="{mTables>id}"/>
							<Text text="{mTables>NoSolicitud}"/>
							<Text text="{mTables>NoAnticipo}"/>
							<Text text="{mTables>FechadeSolicitud}"/>
							<Text text="{mTables>FechaContabiliza}"/>
							<Text text="{mTables>Importe}"/>
							<Text text="{mTables>Moneda}"/>
							<Text text="{mTables>Estado}"/>
							<Text text="{mTables>Aprobadopor}"/>
							<Text text="{mTables>SolPago}"/>
							<Text text="{mTables>Contabilizadopor}"/>
							<Text text="{mTables>DocPago}"/>
						</cells>
					</ColumnListItem>
				</items>
			</Table>
			
			<FlexBox height="100px"  />
			
		</content>
	</Page>
</mvc:View>